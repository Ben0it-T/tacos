{% extends 'base.html.twig' %}

{% block title %}{{trans.view_customers }}{% endblock %}

{% block css %}
    <link href="{{ basePath }}/css/container-max-width.css" rel="stylesheet">
{% endblock %}

{% block navbar %}
    {% embed 'navbar.html.twig' with {'title': trans.view_customers, 'navLinks': navLinks } %}{% endembed %}
{% endblock %}

{% block content %}
    <div class="d-flex justify-content-end py-2">
         <a class="btn btn-close" href="{{ navLinks.customers }}" role="button"></a>
    </div>

    <div class="card mb-3">
        <div class="card-header fs-5 fw-bold">
            <span class="badge p-1 border border-light rounded-circle" style="background-color: {{ customer.color }};"><span class="visually-hidden">color</span></span>
            <span class="ms-1">{{ customer.name }}</span>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-borderless w-auto">
                    <tbody>
                        <tr>
                            <th scope="row">{{ trans.table_row_visible }}</th>
                            <td>
                                {% if customer.visible == true %}
                                    <span class="badge text-bg-success">{{ trans.badge_yes }}</span>
                                {% else %}
                                    <span class="badge text-bg-danger">{{ trans.badge_no }}</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">{{ trans.table_row_customer_number }}</th>
                            <td>{{ customer.number }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{ trans.table_row_creationDate }}</th>
                            <td>{{ customer.createdAt|date(trans.dateFormats_datetime) }}</td>
                        </tr>
                        <tr>
                            <th scope="row">{{ trans.table_row_description }}</th>
                            <td>{{ customer.comment|nl2br }}</td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header fs-5 fw-bold">
            {{ trans.table_row_visibility }}
        </div>

        <div class="card-body">
            {% if selectedTeams|length > 0 %}
            <ul class="list-unstyled ms-1">{{ trans.card_teams_visibility }}
                {% for selectedTeam in selectedTeams %}
                    <li>
                        <div class="d-inline-flex align-items-center">
                            <span class="badge p-1 border border-light rounded-circle" style="background-color: {{ selectedTeam.color }};"><span class="visually-hidden">color</span></span>
                            <span class="ms-1">{{ selectedTeam.name }}</span>
                        </div>
                    </li>
                {% endfor %}
            </ul>
            {% else %}
                {{ trans.card_teams_visibility_all }}
            {% endif %}
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header fs-5 fw-bold">
            {{ trans.table_row_projects }}
        </div>

        <div class="card-body">
            <ul class="list-unstyled ms-1">
                {% for project in projects %}
                    <li>
                        <div class="d-inline-flex align-items-center">
                            <span class="badge p-1 border border-light rounded-circle" style="background-color: {{ project.color }};"><span class="visually-hidden">color</span></span>
                            <span class="ms-1">{{ project.name }}</span>
                        </div>
                    </li>
                {% else %}
                    <li>{{ trans.card_project_none }}</li>
                {% endfor %}
            </ul>
        </div>

    </div>
{% endblock %}

