{% extends 'base.html.twig' %}

{% block title %}{{trans.view_password_request}}{% endblock %}

{% block content %}
    <div class="text-center my-4">
        <img src="{{ basePath }}/img/tacos.png" class="img-fluid rounded-circle mb-2" alt="tacos">
    </div>

    <div class="login-box mx-auto d-block px-4 py-4 border rounded">
        {% if message is not null %}
            <div class="alert alert-important alert-danger">{{ message }}</div>
        {% endif %}
        <h2 class="form-title text-center mb-4">{{ trans.form_title_password_reset }}</h2>
        <form method="post" autocomplete="off">
            <div class="mb-3">
                <label for="password1" class="form-label">{{ trans.form_label_password_new }}</label>
                <input type="password" class="form-control" id="password1" name="_password1" autocomplete="new-password" placeholder="{{ trans.form_label_password_new }}" minlength="{{ form.minlength }}" maxlength="128" required="required" tabindex="1">
            </div>
            <div class="mb-3">
                <label for="password2" class="form-label">{{ trans.form_label_password_confirm }}</label>
                <input type="password" class="form-control" id="password2" name="_password2" autocomplete="new-password" placeholder="{{ trans.form_label_password_confirm }}" minlength="{{ form.minlength }}" maxlength="128" required="required" tabindex="2">
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary w-100" tabindex="3">{{ trans.form_title_password_reset }}</button>
            </div>
            <input type="hidden" name="{{ csrf.nameKey | raw }}" value="{{ csrf.name | raw }}">
            <input type="hidden" name="{{ csrf.valueKey | raw }}" value="{{ csrf.value | raw }}">
        </form>
    </div>
{% endblock %}
